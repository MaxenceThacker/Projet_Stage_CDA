{% extends 'base.html.twig' %}

{% block title %}ResponsablesLegaux index{% endblock %}

{% block body %}
    <h1>ResponsablesLegaux index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Prénom</th>
                <th>Date de naissance</th>
                <th>Adresse</th>
                <th>Complément d'Adresse</th>
                <th>Numéro de Téléphone</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for responsables_legaux in responsables_legauxes %}
            <tr>
                <td>{{ user.nomUser }}</td>
                <td>{{ user.prenomUser }}</td>
                <td>{{ user.ddnUser ? user.ddnUser|date('Y-m-d') : '' }}</td>
                <td>{{ user.adresseUser }}</td>
                <td>{{ user.compltAdresseUser }}</td>
                <td>{{ user.numTelUser }}</td>
                <td>
                    <a class="button" href="{{ path('app_responsables_legaux_Voir', {'id': responsables_legaux.id}) }}">Voir</a>
                    <a class="button" href="{{ path('app_responsables_legaux_Editer', {'id': responsables_legaux.id}) }}">Editer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">Aucun enregistrement trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="button" href="{{ path('app_responsables_legaux_new') }}">Nouveau</a>
{% endblock %}
