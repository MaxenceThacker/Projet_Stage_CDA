{% extends 'base.html.twig' %}

{% block title %}Absences index{% endblock %}

{% block body %}
    <h1>Absences index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Date de l'absence</th>
                <th>Nombre d'heure d'absence</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for absence in absences %}
            <tr>
                <td>{{ absence.dateAbsence ? absence.dateAbsence|date('Y-m-d') : '' }}</td>
                <td>{{ absence.nbrHeureAbsence }}</td>
                <td>
                    <a href="{{ path('app_absences_show', {'id': absence.id}) }}">show</a>
                    <a href="{{ path('app_absences_edit', {'id': absence.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_absences_new') }}">Create new</a>
{% endblock %}
