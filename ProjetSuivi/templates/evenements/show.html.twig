{% extends 'base.html.twig' %}

{% block title %}Evenements{% endblock %}

{% block body %}
    <h1>Evenements</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Identifiant de l'évenement</th>
                <td>{{ evenement.id }}</td>
            </tr>
            <tr>
                <th>Heure de l'évenement</th>
                <td>{{ evenement.heureEvenement ? evenement.heureEvenement|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Date de l'évenement</th>
                <td>{{ evenement.dateEvenement ? evenement.dateEvenement|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a class="button" href="{{ path('app_evenements_index') }}">Retour à la liste</a>

    <a class="button" href="{{ path('app_evenements_edit', {'id': evenement.id}) }}">Editer</a>

    {{ include('evenements/_delete_form.html.twig') }}
{% endblock %}
