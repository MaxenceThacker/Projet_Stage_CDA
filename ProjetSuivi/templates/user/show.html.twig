{% extends 'base.html.twig' %}

{% block title %}Utilisateurs{% endblock %}

{% block body %}
    <h1>Utilisateur</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>EmailUser</th>
                <td>{{ user.emailUser }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.alternants }}</td>
                {# user.roles ? user.roles|json_encode : '' #}
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
            <tr>
                <th>IsVerified</th>
                <td>{{ user.isVerified ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>NomUser</th>
                <td>{{ user.nomUser }}</td>
            </tr>
            <tr>
                <th>PrenomUser</th>
                <td>{{ user.prenomUser }}</td>
            </tr>
            <tr>
                <th>DdnUser</th>
                <td>{{ user.ddnUser ? user.ddnUser|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>AdresseUser</th>
                <td>{{ user.adresseUser }}</td>
            </tr>
            <tr>
                <th>CompltAdresseUser</th>
                <td>{{ user.compltAdresseUser }}</td>
            </tr>
            <tr>
                <th>NumTelUser</th>
                <td>{{ user.numTelUser }}</td>
            </tr>
        </tbody>
    </table>

    <a class="button" href="{{ path('app_user_index') }}">Retour Ã  la liste</a>

    <a href="{{ path('app_user_edit', {'id': user.id}) }}">Editer</a>

    {{ include('user/_delete_form.html.twig') }}
{% endblock %}
