{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>User index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>EmailUser</th>
                <th>Roles</th>
                <th>Password</th>
                <th>IsVerified</th>
                <th>NomUser</th>
                <th>PrenomUser</th>
                <th>DdnUser</th>
                <th>AdresseUser</th>
                <th>CompltAdresseUser</th>
                <th>NumTelUser</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.emailUser }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>{{ user.password }}</td>
                <td>{{ user.isVerified ? 'Yes' : 'No' }}</td>
                <td>{{ user.nomUser }}</td>
                <td>{{ user.prenomUser }}</td>
                <td>{{ user.ddnUser ? user.ddnUser|date('Y-m-d') : '' }}</td>
                <td>{{ user.adresseUser }}</td>
                <td>{{ user.compltAdresseUser }}</td>
                <td>{{ user.numTelUser }}</td>
                <td>
                    <a href="{{ path('app_user_show', {'id': user.id}) }}">show</a>
                    <a href="{{ path('app_user_edit', {'id': user.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="12">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_user_new') }}">Create new</a>
{% endblock %}
